<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StepView">
        <attr name="circleRadius" format="dimension" />
        <attr name="circleColorDone" format="color" />
        <attr name="circleColorDefault" format="color" />
        <attr name="lineHeight" format="dimension" />
        <attr name="lineColorDone" format="color" />
        <attr name="lineColorDefault" format="color" />
        <attr name="statusTextColorDone" format="color" />
        <attr name="statusTextColorDefault" format="color" />
        <attr name="textDateColor" format="color" />
        <attr name="statusTextSize" format="dimension" />
        <attr name="dateTextSize" format="dimension" />
        <attr name="textSpace" format="dimension" />
        <attr name="stepCount" format="integer" />
    </declare-styleable>

    <declare-styleable name="TXEditText">
        <attr name="limitLength" format="integer" />
        <attr name="limitText" format="string" />
    </declare-styleable>

    <declare-styleable name="TXRatingView">
        <!-- 最大分 -->
        <attr name="maxRating" format="integer" />
        <!-- 当前分 -->
        <attr name="rating" format="integer" />
        <!-- 没分的icon -->
        <attr name="emptyDrawable" format="reference" />
        <!-- 有分的icon -->
        <attr name="filledDrawable" format="reference" />
        <!-- icon大小 -->
        <attr name="ratingSize" format="dimension" />
        <!-- icon间距 -->
        <attr name="itemSpace" format="dimension" />
        <!-- 是否能修改分数 -->
        <attr name="enabled" format="boolean" />
    </declare-styleable>
</resources>