    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp">

        <com.cc.custom.seek.TXFrameView
            android:id="@+id/frameView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp" />

        <com.cc.custom.seek.TXRangeSeekBar3
            android:id="@+id/rangBar3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp" />
    </RelativeLayout>

    <com.cc.custom.seek.TXFrameSeekBar
        android:id="@+id/frameBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/rl_content"
        android:layout_marginTop="50dp" />

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/frameBar"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

</RelativeLayout>